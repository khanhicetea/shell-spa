{
  "name": "shell-spa",
  "private": true,
  "type": "module",
  "description": "A minimal shell SPA boilerplate with SSR shell for auth and client-side SPA for everything else",
  "scripts": {
    "dev": "vite dev --port 3000",
    "build": "vite build",
    "preview": "vite preview",
    "start": "node .output/server/index.mjs",
    "lint": "biome lint --write",
    "format": "biome format --write",
    "check-types": "tsc --noEmit",
    "check": "pnpm format && pnpm lint && pnpm check-types",
    "db": "drizzle-kit",
    "deps": "pnpx taze@latest -Ilw",
    "deps:major": "pnpx taze@latest major -Ilw",
    "ui": "pnpx shadcn@latest",
    "auth:secret": "pnpx @better-auth/cli@latest secret",
    "auth:generate": "pnpx @better-auth/cli@latest generate --config ./src/lib/auth/auth.ts --y --output ./src/lib/db/schema/auth.schema.ts && prettier --write ./src/lib/db/schema/auth.schema.ts"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@orpc/client": "^1.12.3",
    "@orpc/server": "^1.12.3",
    "@orpc/tanstack-query": "^1.12.3",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@t3-oss/env-core": "^0.13.8",
    "@tanstack/react-query": "^5.90.12",
    "@tanstack/react-router": "^1.141.2",
    "@tanstack/react-router-ssr-query": "^1.141.2",
    "@tanstack/react-start": "^1.141.3",
    "@tanstack/start-server-core": "^1.141.2",
    "@vitejs/plugin-react": "^5.1.2",
    "better-auth": "^1.4.6",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.44.7",
    "lucide-react": "^0.555.0",
    "next-themes": "^0.4.6",
    "nitro": "3.0.1-alpha.1",
    "pg": "^8.16.3",
    "postgres": "^3.4.7",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-hook-form": "^7.68.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "vite": "npm:rolldown-vite@^7.2.11",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@tailwindcss/vite": "^4.1.18",
    "@tanstack/devtools-vite": "^0.3.12",
    "@types/node": "^24.10.3",
    "@types/pg": "^8.16.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "babel-plugin-react-compiler": "^1.0.0",
    "drizzle-kit": "^0.31.8",
    "tailwindcss": "^4.1.18",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "^5.1.4"
  }
}
